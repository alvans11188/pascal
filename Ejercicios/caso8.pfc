program caso8;
var
	numero1,numero2,numero3:integer;
begin
writeln('Un numero');
readln(numero1);
writeln('Ingrese otro numero');
readln(numero2);
if numero1 > numero2 then
	begin
		writeln('Ingrese otro numero');
